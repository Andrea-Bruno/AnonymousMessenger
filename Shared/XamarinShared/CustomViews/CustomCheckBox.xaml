<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="XamarinShared.CustomViews.CustomCheckBox"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Ellipse
            x:Name="BgRectangle"
            HeightRequest="20"
            Stroke="#FFD62C"
            StrokeThickness="2"
            WidthRequest="20">

            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCheckBoxTapped" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
    </ContentView.Content>
</ContentView>

