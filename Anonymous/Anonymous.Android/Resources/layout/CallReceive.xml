<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tv_incoming_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming call"
        android:fontFamily="monospace"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        />
     <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/name"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musabir"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/name"
        android:src="@drawable/ic_call_profile"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/call_type"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Call"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_below="@+id/profile_image"/>
    <RelativeLayout
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/decline_lyt"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/accept_lyt">
            <ImageView
                android:id="@+id/decline"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:src="@drawable/ic_end_call"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/accept_lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/accept"
                android:layout_centerHorizontal="true"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:src="@drawable/ic_accept_call"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>
            </LinearLayout>
    </RelativeLayout>
</RelativeLayout>