<?xml version="1.0" encoding="UTF-8" ?>
<views:BasePage
    x:Class="Cryptogram.Views.GroupUserSelectPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:Localization;assembly=Localization"
    xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:views="clr-namespace:CustomViewElements;assembly=CustomViewElements"
    xmlns:dh="clr-namespace:Cryptogram.DesignHandler"
    ios:Page.UseSafeArea="true">
    <RelativeLayout>

        <StackLayout Spacing="0" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width}" 
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height}">
            <StackLayout
                x:Name="ToolbarSelectUserLayout"
                BackgroundColor="{DynamicResource Color2}"
                HeightRequest="61"
                IsVisible="True"
                MinimumHeightRequest="61"
                Orientation="Horizontal"
                Spacing="0">
                <StackLayout Padding="10,4,10,6">
                    <Image
                        Margin="5,15,0,10"
                        HeightRequest="20"
                        HorizontalOptions="Start"
                        Source="{dh:ImageResourceExtension ic_new_back_icon.png}"
                        WidthRequest="15" />
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Back_Clicked" />
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                <StackLayout
                    HorizontalOptions="FillAndExpand"
                    Orientation="Vertical"
                    VerticalOptions="CenterAndExpand">
                    <views:CustomLabel
                        Margin="0"
                        Padding="0"
                        FontFamily="PoppinsSemiBold"
                        FontSize="22"
                        Text="{x:Static local:Resources.Dictionary.SelectUsers}"
                        TextColor="{DynamicResource WhiteColor}" />
                    <views:CustomLabel
                        x:Name="SelectedUsers"
                        Margin="0,-10,0,0"
                        Padding="0"
                        FontSize="14"
                        LineBreakMode="TailTruncation"
                        MaxLines="1"
                        Text=""
                        TextColor="{DynamicResource Audio}" />
                </StackLayout>
                <StackLayout
                    Margin="0,0,10,0"
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal"
                    VerticalOptions="CenterAndExpand">
                    <StackLayout
                        x:Name="SearchButton"
                        Margin="0,3,0,0"
                        Padding="3">
                        <Image
                            x:Name="SearchUser"
                            Margin="0,0,4,0"
                            HeightRequest="22"
                            Source="{dh:ImageResourceExtension ic_toolbar_search.png}"
                            WidthRequest="21" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="SearchButton_Clicked" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            <StackLayout
                x:Name="ToolbarSearchLayout"
                BackgroundColor="{DynamicResource Color2}"
                HeightRequest="61"
                IsVisible="False"
                MinimumHeightRequest="61"
                Orientation="Horizontal"
                Spacing="0">
                <Frame
                    x:Name="SearchBarFrame"
                    Margin="30,6,0,6"
                    Padding="12,0,12,0"
                    BackgroundColor="{DynamicResource Color1}"
                    CornerRadius="24"
                    HasShadow="False"
                    HeightRequest="38"
                    HorizontalOptions="FillAndExpand"
                    MinimumHeightRequest="38">
                    <StackLayout Orientation="Horizontal">
                        <Image
                            Margin="0,0,0,0"
                            HeightRequest="24"
                            HorizontalOptions="Start"
                            Source="{dh:ImageResourceExtension ic_toolbar_search.png}"
                            VerticalOptions="Center"
                            WidthRequest="24" />
                        <views:CustomEntry
                            x:Name="SearchBar"
                            x:FieldModifier="public"
                            FontSize="18"
                            HorizontalOptions="FillAndExpand"
                            Placeholder="{x:Static local:Resources.Dictionary.Search}"
                            PlaceholderColor="{DynamicResource Gray}"
                            TextChanged="Search_TextChanged"
                            TextColor="{DynamicResource WhiteColor}" />
                    </StackLayout>
                </Frame>
                <ImageButton
                    x:Name="toolbarSearchClear"
                    Padding="16"
                    x:FieldModifier="public"
                    BackgroundColor="Transparent"
                    Clicked="SearchClearButton_Clicked"
                    HeightRequest="48"
                    HorizontalOptions="Center"
                    MinimumHeightRequest="48"
                    MinimumWidthRequest="48"
                    Source="{dh:ImageResourceExtension ic_toolbar_search_clear.png}"
                    VerticalOptions="Center"
                    WidthRequest="48" />
            </StackLayout>
            <StackLayout
                x:Name="SelectedItemPane"
                Margin="0,-6,0,-6"
                Padding="0"
                BackgroundColor="{DynamicResource Color2}"
                HeightRequest="104"
                IsVisible="False"
                MinimumHeightRequest="104">
                <BoxView
                    Margin="75,0,0,0"
                    HeightRequest="1"
                    VerticalOptions="Fill"
                    Color="{DynamicResource Gray}" />
                <syncfusion:SfListView
                    x:Name="SelectedItemsListView"
                    AutoFitMode="Height"
                    BackgroundColor="Transparent"
                    ItemTapped="OnItemSelected"
                    Orientation="Horizontal"
                    VerticalOptions="FillAndExpand">
                    <syncfusion:SfListView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Margin="0"
                                Padding="0,10,0,0"
                                BackgroundColor="{DynamicResource Color2}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <StackLayout
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0"
                                    Padding="0"
                                    BackgroundColor="{DynamicResource Color2}"
                                    HeightRequest="52"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center">
                                    <views:CustomAvatar
                                        Contact="{Binding contact}"
                                        CornerRadius="25"
                                        HeightRequest="50"
                                        WidthRequest="50" />
                                    <Image
                                        x:Name="Added"
                                        Margin="0,-25,0,0"
                                        BackgroundColor="Transparent"
                                        HeightRequest="20"
                                        HorizontalOptions="End"
                                        IsVisible="{Binding isVisible}"
                                        Source="{dh:ImageResourceExtension ic_unmark.png}"
                                        VerticalOptions="End"
                                        WidthRequest="20" />
                                </StackLayout>
                                <views:CustomPageHeaderLabel
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,-5,0,0"
                                    FontFamily="PoppinsRegular"
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    MaxLines="2"
                                    Text="{Binding contact.Name}"
                                    TextColor="{x:DynamicResource WhiteColor}"
                                    VerticalOptions="Center"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </syncfusion:SfListView.ItemTemplate>
                </syncfusion:SfListView>
            </StackLayout>
            <Frame
                Margin="0"
                Padding="0"
                CornerRadius="0"
                HasShadow="False"
                VerticalOptions="FillAndExpand">
                <StackLayout BackgroundColor="{DynamicResource Color1}" Orientation="Vertical">
                    <syncfusion:SfListView
                        x:Name="ItemsListView"
                        AllowSwiping="True"
                        BackgroundColor="Transparent"
                        ItemSize="75"
                        ItemTapped="OnItemSelected"
                        SelectionMode="None"
                        VerticalOptions="FillAndExpand">
                        <syncfusion:SfListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout
                                        HeightRequest="75"
                                        MinimumHeightRequest="75"
                                        Orientation="Vertical"
                                        Spacing="0">
                                        <StackLayout
                                            Margin="12"
                                            HeightRequest="50"
                                            MinimumHeightRequest="50"
                                            Orientation="Horizontal"
                                            Spacing="0"
                                            VerticalOptions="FillAndExpand">
                                            <views:CustomAvatar
                                                Contact="{Binding contact}"
                                                CornerRadius="25"
                                                HeightRequest="50"
                                                WidthRequest="50" />
                                            <Image
                                                x:Name="Added"
                                                Margin="-20,0,0,-5"
                                                HeightRequest="20"
                                                HorizontalOptions="Start"
                                                IsVisible="{Binding isVisible}"
                                                Source="{dh:ImageResourceExtension ic_mark.png}"
                                                VerticalOptions="End"
                                                WidthRequest="20" />
                                            <views:CustomLabel
                                                x:Name="Name"
                                                Margin="16,0,0,0"
                                                FontFamily="PoppinsSemiBold"
                                                FontSize="18"
                                                HorizontalOptions="FillAndExpand"
                                                MaxLines="1"
                                                Style="{DynamicResource ListItemTextStyle}"
                                                Text="{Binding contact.Name}"
                                                TextColor="{DynamicResource WhiteColor}"
                                                VerticalOptions="Center" />
                                        </StackLayout>
                                        <BoxView
                                            Margin="75,0,0,0"
                                            HeightRequest="1"
                                            VerticalOptions="Fill"
                                            Color="{DynamicResource Color3}" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </syncfusion:SfListView.ItemTemplate>
                    </syncfusion:SfListView>
                    <views:CustomNoResult
                        x:Name="NoResultPage"
                        IsVisible="false"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
       
        </StackLayout>

        <StackLayout
            x:Name="NextButton"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width,Constant=-80}" 
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,Property=Height,Constant=-80}"
            HorizontalOptions="End"
            VerticalOptions="End">
            <Image
                x:Name="Next"
                HeightRequest="64"
                Source="{dh:ImageResourceExtension ic_next_disabled.png}"
                WidthRequest="64" />
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Next_Clicked" />
            </StackLayout.GestureRecognizers>
        </StackLayout>
    </RelativeLayout>

</views:BasePage>
